<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!--Messages and Error messages-->
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="registerContainer">
    <p>All fields are required</p>
    <form id=registerForm action="/account/register" method="post">
        <fieldset>
            <label for="accountFirstName">First Name</label>
            <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
            <label for="accountLastName">Last Name</label>
            <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">
            <label for="regEmail">Email Address:</label><br>
            <input type="email" id="regEmail" name="account_email" required value="<%= locals.account_email %>"><br>
            <label for="loginPassword">Password:</label><br>
            <span>Requirement: 1 UPPER, number, special character, no less than 12 characters.</span>
            <input type="password" id="loginPassword" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <button type="submit">Submit</button>
        </fieldset>
      </form>
</div>