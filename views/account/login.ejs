<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!--Messages and Error messages-->
<%- messages() %>

<div class="loginContainer">
    <form id="loginForm" action="/account/login" method="post">
        <fieldset>
            <label for="email">Email:</label><br>
            <input type="email" id="regEmail" name="account_email" minlength="3" required value="<%= locals.account_email %>">
            <label for="password">Password:</label><br>
            <span>Requirement: 1 UPPER, number, special character, no less than 12 characters.</span>
            <input type="password" id="loginPassword" name="account_password" required value="<%= locals.account_password %>" minlength="3" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <button type="submit">Login</button>
        </fieldset>
        <p>Don't have an account? <a href="/account/register">Sign-up</a></p>
      </form>
</div>