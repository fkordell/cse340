<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>

    <div class="addClassification">
        <form id="addClassForm" action="/inv" method="post">
            <fieldset>
                <span>Field is required</span>
                <label for="classification">Classification Name: Must be alphabetical letters only, no spaces </label><br>
                <input type="text" id="classification_name" name="classification_name" minlength="3" pattern="[A-Za-z]+" required placeholder="Enter a classification name" value="<%= locals.classification_name %>">
                <button type="submit" value="newClass">Add Classification</button>
            </fieldset>
          </form>
    </div>